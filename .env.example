PORT=8787
CORS_ORIGIN=http://localhost:3001
MONGO_URI=mongodb://localhost:27017/dew_streaming

# Optional secret for RTMP webhooks (legacy)
RTMP_HOOK_SECRET=change-me

# Optional hints for clients/OBS (legacy)
RTMP_INGEST_URL=rtmp://localhost/live

# ===== mediasoup SFU Settings =====

# IP address mediasoup will listen on (usually 0.0.0.0)
MEDIASOUP_LISTEN_IP=0.0.0.0

# IMPORTANT: Public IP address of your server
# This is the IP that clients will use to connect for WebRTC media
# For local development: use your local IP (e.g., 192.168.1.100)
# For production: use your VPS public IP (e.g., 123.45.67.89)
MEDIASOUP_ANNOUNCED_IP=

# UDP/TCP port range for WebRTC media traffic
# Make sure these ports are open in your firewall
MEDIASOUP_MIN_PORT=10000
MEDIASOUP_MAX_PORT=10100

# Number of mediasoup workers (usually 1-4, depends on CPU cores)
MEDIASOUP_NUM_WORKERS=2
